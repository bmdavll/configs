#!/bin/bash

INFO=\
"PWD:
$PWD\n
ARGS:$#
$@\n
NAUTILUS_SCRIPT_CURRENT_URI:
$NAUTILUS_SCRIPT_CURRENT_URI\n"

set $NAUTILUS_SCRIPT_SELECTED_URIS
NUM_URIS=$#

set $NAUTILUS_SCRIPT_SELECTED_FILE_PATHS
NUM_PATHS=$#

zenity --info --title "Nautilus Script Info" --text \
"$INFO
NAUTILUS_SCRIPT_SELECTED_URIS:$NUM_URIS
$NAUTILUS_SCRIPT_SELECTED_URIS
NAUTILUS_SCRIPT_SELECTED_FILE_PATHS:$NUM_PATHS
$NAUTILUS_SCRIPT_SELECTED_FILE_PATHS"

